@model BTL.ViewModels.Account.LoginViewModel
@{
    Layout = null;
    ViewBag.Title = "Đăng nhập";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <script src="~/Scripts/jquery-3.4.1.js"></script>
</head>
<body>
    <section class="h-100">
        <div class="container h-100">
            <div class="row justify-content-sm-center h-100">
                <div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">
                    <div class="card shadow-lg">
                        <div class="card-body p-5">
                            <h1 class="fs-2 card-title text-center text-uppercase fw-bold mb-5">@ViewBag.Title</h1>
                            <div class="w-100 text-center">
                                <p>@ViewBag.Error</p>
                            </div>
                            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @id = "login-form", @novalidate = "", @autocomplete = "off" }))
                            {
                                @Html.AntiForgeryToken()
                                <div class="mb-3">
                                    @Html.LabelFor(p => p.Email, new { @class = "mb-2 text-muted"})
                                    @Html.TextBoxFor(p => p.Email, new { @class = "form-control", @required = true, @autofoucs = true })
                                    @Html.ValidationMessageFor(p => p.Email, "", new { @class = "text-danger" })
                                </div>

                                <div class="my-3">
                                    <div class="mb-2 w-100">
                                        <div class="my-2">
                                            @Html.LabelFor(p => p.Password, new { @class = "text-muted" })
                                            @Html.ActionLink("Forgot Password", "ForgotPassword", "Account", new { @class = "float-end text-decoration-none" })
                                        </div>
                                        @Html.TextBoxFor(p => p.Password, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(p => p.Password, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="d-flex align-items-center">
                                    <div class="form-check">
                                        @Html.CheckBoxFor(p => p.RememberMe, new { @class = "form-check-input" })
                                        @Html.LabelFor(p => p.RememberMe, new { @class = "form-check-label" })
                                    </div>

                                    <button id="btn-login" type="submit" class="btn btn-primary ms-auto">
                                        Đăng nhập
                                    </button>
                                </div>
                            }
                        </div>
                        <div class="card-footer py-3 border-0">
                            <div class="text-center text-muted fw-lighter">
                                @Html.ActionLink("Đăng ký ngay", "Register", "Account", new { @class = "text-reset text-decoration-none" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
