@{
    var page = int.Parse(ViewData["Page"].ToString());
    int totalPages = 0;
    if(ViewData["TotalPage"] != null)
    {
        totalPages = int.Parse(ViewData["TotalPages"].ToString());
    }
}
<p id="pagination" class="d-none">@page</p>
<p>Aaa</p>
<nav class="mt-2">
    <ul class="pagination justify-content-center">
        @for (int i = 1; i <= totalPages; i++)
        {
            if (i == page)
            {
                <li class="page-item active">
                    <span data-id="@i" class="page-link">@i</span>
                </li>
            }
            else
            {
                <li class="page-item">
                    <span class="page-link">@i</span>
                </li>
            }
        }
    </ul>
</nav>
